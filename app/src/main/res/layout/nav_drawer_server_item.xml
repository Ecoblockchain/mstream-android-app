<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingEnd="24dp"
    android:paddingStart="24dp">

    <ImageView
        android:id="@+id/icon_not_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/inactive_server"
        android:src="@drawable/ic_cloud_queue_black_24dp"
        android:tint="@color/medium_grey"/>

    <ImageView
        android:id="@+id/icon_is_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/active_server"
        android:src="@drawable/ic_cloud_done_black_24dp"
        android:tint="@color/dark_blue"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
</LinearLayout>
